<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.spring.mapper.UserMapper">
    <resultMap id="userMap" type="com.spring.model.User">
        <id property="id" column="id" javaType="int"></id>
        <result property="name" column="name" javaType="type"></result>
        <result property="phone" column="phone" javaType="type"></result>
        <result property="telephone" column="telephone" javaType="type"></result>
    </resultMap>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        insert into user(username, phone, telephone, address)
        values(#{name}, #{password}, #{sex}, #{address})
    </insert>

    <update id="updateUser" parameterType="User">
        update user set name=#{name}, phone=#{phone}, telephone=#{telephone} where id=#{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from user where id=#{id}
    </delete>

    <select id="findUser" parameterType="int" resultType="userMap">
        select * from user where id=#{id}
    </select>

    <select id="findAllUsers" resultType="userMap">
        select * from user
    </select>
</mapper>